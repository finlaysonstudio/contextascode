{
  "output": {
    "filePath": "./context/out/repo/packages.xml",
    "style": "xml",
    "parsableStyle": true,
    "directoryStructure": true
  },
  "include": [
    "./packages/*/",
    "./packages/*/src/*"
  ],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      "./packages/*/src/*/*"
    ]
  },
  "security": {
    "enableSecurityCheck": true
  }
}
