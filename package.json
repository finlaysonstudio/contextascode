{
  "name": "@contextascode/monorepo",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:contextaider": "npm run build --workspace=packages/contextaider",
    "clean:aider": "rimraf .aider.*.history*",
    "clean": "npm run clean --workspaces && npm run clean:root",
    "clean:root": "npm run clean:aider",
    "clean:contextaider": "npm run clean --workspace=packages/contextaider",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:contextaider": "npm run test --workspace=packages/contextaider",
    "test:contextaider:watch": "npm run test:watch --workspace=packages/contextaider",
    "test:contextaider:coverage": "npm run test:coverage --workspace=packages/contextaider",
    "lint": "eslint --quiet .",
    "format": "eslint --fix .",
    "format:package": "sort-package-json ./package.json ./packages/*/package.json",
    "typecheck": "tsc --noEmit",
    "typecheck:contextaider": "npm run typecheck --workspace=packages/contextaider",
    "dev": "vite",
    "dev:contextaider": "npm run dev --workspace=packages/contextaider",
    "repomix": "npm run repomix:packages && npm run repomix:packages:cli && npm run repomix:context && npm run repomix:context:changelog && npm run repomix:context:internal && npm run repomix:monorepo",
    "repomix:packages": "repomix --config config/repomix/packages.json",
    "repomix:packages:copy": "repomix --config config/repomix/packages.json --copy",
    "repomix:packages:cli": "repomix --config config/repomix/packages-cli.json",
    "repomix:packages:cli:copy": "repomix --config config/repomix/packages-cli.json --copy",
    "repomix:context": "repomix --config config/repomix/context.json",
    "repomix:context:copy": "repomix --config config/repomix/context.json --copy",
    "repomix:context:changelog": "repomix --config config/repomix/context-changelog.json",
    "repomix:context:changelog:copy": "repomix --config config/repomix/context-changelog.json --copy",
    "repomix:context:internal": "repomix --config config/repomix/context-internal.json",
    "repomix:context:internal:copy": "repomix --config config/repomix/context-internal.json --copy",
    "repomix:monorepo": "repomix --config config/repomix/monorepo.json",
    "repomix:monorepo:copy": "repomix --config config/repomix/monorepo.json --copy"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@jaypie/eslint": "^1.1.22",
    "@jaypie/testkit": "^1.1.22",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@vitest/coverage-v8": "^3.1.1",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "jest-extended": "^4.0.2",
    "prettier": "^3.5.3",
    "repomix": "^0.3.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.2",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "@contextascode/cli": "^0.1.0"
  }
}
