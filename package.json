{
  "name": "@contextascode/monorepo",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "clean": "npm run clean --workspaces && npm run clean:root",
    "clean:root": "rimraf node_modules",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "format": "eslint --fix .",
    "format:package": "sort-package-json ./package.json ./packages/*/package.json",
    "typecheck": "npm run typecheck --workspaces",
    "dev": "vite"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@jaypie/eslint": "^1.1.22",
    "@jaypie/testkit": "^1.1.22",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@vitest/coverage-v8": "^3.1.1",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "jest-extended": "^4.0.2",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.2",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "@contextascode/cli": "^0.1.0"
  }
}
